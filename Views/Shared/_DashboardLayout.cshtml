    <style>
        html, body, h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6, p, :not(i) {
            font-family: Verdana !important;
        }

        .read {
            background-color: white;
        }

        .unread {
            background-color: lightgrey;
        }

        .nav-link.hut-link.active {
            background-color: lightslategrey !important;
            color: #222 !important;
            font-weight: normal !important;
        }


            .nav-link.hut-link.active .nav-icon,
            .nav-link.hut-link.active p {
                color: #222 !important;
                font-weight: normal !important;
            }

        /* Rotate arrow icon when Admin Booking Hub is expanded */
        .nav-link[aria-expanded="true"] > div > .fa-angle-down {
            transform: rotate(180deg);
            transition: transform 0.3s ease;
        }
    </style>


    @RenderSection("styles", required: false)
    @{
        var session = (BHMS_Portal.Models.SessionModel)Session["BHMS_PortalSession"];
    }
</head>
<body class="hold-transition sidebar-mini layout-fixed sidebar-collapse">
    <div class="loader main_loader">
        <div class="loader_overlay"></div>
        <img class="loader_img" src="~/Content/Web/assets/img/Ripple-2.3s-97px.svg">
    </div>
    <div class="wrapper">
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/Content/Web/assets/img/Ripple-2.3s-97px.svg" alt="Loading..." height="60" width="60">
        </div>

        <nav class="main-header navbar navbar-expand navbar-white navbar-light" style="background-color: #ba0c2f;">
            <div class="container-fluid d-flex justify-content-between align-items-center">

                <!-- Left part: menu toggle -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                    </li>
                </ul>

                <!-- Center: heading -->
                <div class="d-flex justify-content-center flex-fill">
                    <h4 style="color: #ffffff; margin: 0;">Jubilee Booking Hut Management System</h4>
                </div>

                <!-- Right part: Hut display -->
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <div class=""></div>
                    </li>
                </ul>

            </div>
        </nav>
        <aside class="main-sidebar sidebar-light-maroon elevation-4">
            <a href="" class="brand-link">
                <img src="~/Content/Web/assets/img/favicons/favicon-196x196.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">BHMS Portal</span>
            </a>



            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Content/Web/assets/img/profile_pic.png" class="img-circle elevation-2" alt="User Image">
                    </div>



                    <div class="info">
                        <a href="#" class="d-block">
                            @if (session != null)
                            {
                                <p>@session.FullName</p>
                            }
                            else
                            {
                                <p><a href="@Url.Action("Login", "Account")">Login</a></p>
                            }
                        </a>
                    </div>





                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">


                        <li class="nav-item">
                            <a href="@Url.Action("Index", "BHMS")" class="nav-link" style="display: block;">
                                <div style="display: flex; align-items: center; width: 100%;">
                                    <i class="fa fa-calendar nav-icon" style="width: 1.25rem; text-align: center; margin-right: 0.5rem; opacity: 0.8; display: inline-block;"></i>

                                    <p style="margin-bottom: 0;">Calendar</p>
                                </div>
                            </a>
                        </li>


                        @if (session != null && session.IsAdmin)
                        {

                            <li class="nav-item">
                                <a href="#adminBookingCollapse" class="nav-link" data-toggle="collapse" aria-expanded="false" aria-controls="adminBookingCollapse" style="display: block;">
                                    <div style="display: flex; align-items: center; width: 100%;">
                                        <i class="fas fa-layer-group nav-icon" style="width: 1.25rem; text-align: center; margin-right: 0.5rem; opacity: 0.8; display: inline-block;"></i>
                                        <p style="margin-bottom: 0;">Admin Booking Hub</p>
                                        <i class="fas fa-angle-down ml-auto"></i>
                                    </div>
                                </a>
                            </li>

                            <div class="collapse" id="adminBookingCollapse">
                            <li class="nav-item" style="margin-left: 24px;">
                                <a href="@Url.Action("Index", "BHMS", new { hutId = ViewBag.StaffHutId })"
                                   class="nav-link hut-link @(ViewBag.SelectedHutId == ViewBag.StaffHutId ? "active" : "")" style="display: block;">
                                    <div style="display: flex; align-items: center; width: 100%;">
                                        <i class="fas fa-home nav-icon" style="width: 0.5rem; text-align: center; margin-right: 1rem; opacity: 0.8; display: inline-block;"></i>
                                        <p style="margin-bottom: 0;">@ViewBag.StaffHutName</p>
                                    </div>
                                </a>
                            </li>

                            <li class="nav-item" style="margin-left: 24px;">
                                <a href="@Url.Action("Index", "BHMS", new { hutId = ViewBag.ExecutiveHutId })"
                                   class="nav-link hut-link @(ViewBag.SelectedHutId == ViewBag.ExecutiveHutId ? "active" : "")" style="display: block;">
                                    <div style="display: flex; align-items: center; width: 100%;">
                                        <i class="fas fa-building nav-icon" style="width: 0.5rem; text-align: center; margin-right: 1rem; opacity: 0.8; display: inline-block;"></i>
                                        <p style="margin-bottom: 0;">@ViewBag.ExecutiveHutName</p>
                                    </div>
                                </a>
                            </li>
                </div>



                <li class="nav-item">
                    <a href="@Url.Action("Index", "HutManagement")" class="nav-link" style="display: block;">
                        <div style="display: flex; align-items: center; width: 100%;">
                            <i class="fas fa-home" style="width: 1.25rem; text-align: center; margin-right: 0.5rem; opacity: 0.8; display: inline-block;"></i>
                            <p style="margin-bottom: 0;">Hut Management</p>
                        </div>
                    </a>
                </li>
            }



                      @if (ViewBag.IsAdmin == true)
{
    <li class="nav-item @(ViewBag.ShowBookingLogs == true ? "active" : "")">
        <a class="nav-link" href="@Url.Action("BookingLogs", "Admin")" style="display: block;">
            <div style="display: flex; align-items: center; width: 100%;">
                <i class="fas fa-list nav-icon" style="width: 1.25rem; text-align: center; margin-right: 0.5rem; opacity: 0.8; display: inline-block;"></i>
                <p style="margin-bottom: 0;">Booking Logs</p>
            </div>
        </a>
    </li>
}


                                 

                        @* Add Pending Approvals link visible only to Admin *@
                        @if (session != null && session.IsAdmin)
                        {
                            <li class="nav-item">
                                <a href="@Url.Action("PendingApprovals", "BHMS")" class="nav-link" style="display: block;">
                                    <div style="display: flex; align-items: center; width: 100%;">
                                        <i class="fas fa-tasks" style="width: 1.25rem; text-align: center; margin-right: 0.5rem; opacity: 0.8; display: inline-block;"></i>
                                        <p style="margin-bottom: 0;">Pending Approvals</p>
                                    </div>
                                </a>
                            </li>
                        }

                        @* Add "MaintenanceLogs" link visible only to Admin *@
                        @if (session != null && session.IsAdmin)
                        {
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "MaintenanceLogs")" class="nav-link" style="display: block;">
                                    <div style="display: flex; align-items: center; width: 100%;">
                                        <i class="fas fa-tools" style="width: 1.25rem; text-align: center; margin-right: 0.5rem; opacity: 0.8; display: inline-block;"></i>
                                        <p style="margin-bottom: 0;">Maintenance Logs</p>
                                    </div>
                                </a>
                            </li>
                        }


                        @if (ViewBag.IsHoD == true)
                        {
                            <li class="nav-item">
                                <a href="@Url.Action("HoDPendingApprovals", "BHMS")" class="nav-link" style="display: block;">
                                    <div style="display: flex; align-items: center; width: 100%;">
                                        <i class="fas fa-user-check" style="width: 1.25rem; text-align: center; margin-right: 0.5rem; opacity: 0.8; display: inline-block;"></i>
                                        <p style="margin-bottom: 0;">Pending Approvals</p>
                                    </div>
                                </a>
                            </li>
                        }


                        @if (ViewBag.ShowFeedbackMenu == true)
                        {
                            <li class="nav-item">
                                <a href="@Url.Action("Submit", "Feedback")" class="nav-link" style="display: block;">
                                    <div style="display: flex; align-items: center; width: 100%;">
                                        <i class="fas fa-comment-dots"
                                           style="width: 1.25rem; text-align: center; margin-right: 0.5rem;
                          opacity: 0.8; display: inline-block;">
                                        </i>
                                        <p style="margin-bottom: 0;">Feedback</p>
                                    </div>
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a href="@Url.Action("LogOut", "Account")" class="nav-link" style="display: block;">
                                <div style="display: flex; align-items: center; width: 100%;">
                                    <i class="fas fa-arrow-right" style="width: 1.25rem; text-align: center; margin-right: 0.5rem; opacity: 0.8; display: inline-block;"></i>
                                    <p style="margin-bottom: 0;">Logout</p>
                                </div>
                            </a>
                        </li>
                        </ul>
                        </nav>
</div>
                </aside>
                <div class="content-wrapper">
                    <section class="content pt-2" style="min-height:80vh">
                        <div class="container-fluid">
                            @RenderBody()
                        </div>
                    </section>
                </div>
                <footer class="main-footer">
                    <strong>Copyright &copy; 2025 <a href="#">Jubilee Life </a>.</strong>
                    All rights reserved.
                </footer>
                </div>

                <script type="text/javascript" src="~/Content/Web/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
                <script defer type="text/javascript" src="~/Content/Web/assets/plugins/toastr/toastr.min.js"></script>
                <script defer type="text/javascript" src="~/Content/Web/assets/js/adminlite.min.js"></script>
                <script defer type="text/javascript" src="~/Content/Web/assets/js/main.js"></script>
                <script src="~/Content/Web/assets/plugins/select2/select2.min.js"></script>
                
                <link defer rel="stylesheet" href="~/Content/Web/assets/plugins/fontawesome/css/all.min.css">
                <script type="text/javascript" src="~/Content/Web/assets/plugins/bootstrap/js/bootstrap.min.js"></script>

                <script type="text/javascript">
                    $(document).ready(function () {
                        toastr.options = {
                            "preventDuplicates": true,
                        }
                    });


                </script>
                @RenderSection("scripts", required: false)


            </body>
    </html>

